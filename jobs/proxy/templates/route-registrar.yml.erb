---
<%
my_address = spec.address
my_index = spec.index
%>
message_bus_servers:
<% p('nats.machines').each do |ip| %>
- host: <%= ip %>:<%= p('nats.port') %>
  user: <%= p('nats.user') %>
  password: <%= p('nats.password') %>
<% end %>
<% my_ip = my_address %>
<% proxy_index = my_index %>
host: <%= my_ip %>
routes:
- name: "proxy_<%= my_index %>"
  port: <%= p('cf_mysql.proxy.api_port') %>
  uris:
  - proxy-<%= proxy_index %>-<%= p('cf_mysql.external_host') %>
  registration_interval: 10
